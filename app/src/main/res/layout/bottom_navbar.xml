<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:baselineAligned="false">
<!--  home键  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tag_home">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_iv_home"
            android:background="@drawable/tab_home"/>

    </LinearLayout>

    <!--  search键  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tag_search">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_iv_search"
            android:background="@drawable/tab_search"/>

    </LinearLayout>

    <!--  favorites键  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tag_favorites">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_iv_favorites"
            android:background="@drawable/tab_favorites"/>

    </LinearLayout>

    <!--  profile键  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tag_profile">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_iv_profile"
            android:background="@drawable/tab_profile"/>

    </LinearLayout>
<!---->
</LinearLayout>