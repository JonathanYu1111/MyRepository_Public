<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/lv_cv_left"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/lv_img_left"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/landscape_default_image"/>
    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lv_ll_left"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:id="@+id/lv_name_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place1"
                android:textSize="35sp"/>
            <TextView
                android:id="@+id/lv_description_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="5"
                android:text="place description place description
            \n place description place description\n place description place description"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_ll_right"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:id="@+id/lv_name_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place1"
                android:textSize="35sp"/>
            <TextView
                android:id="@+id/lv_description_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="5"
                android:text="place description place description
            \n place description place description\n place description place description"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/lv_cv_right"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/lv_img_right"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/landscape_default_image"/>
        </androidx.cardview.widget.CardView>





</LinearLayout>
